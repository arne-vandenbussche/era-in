CREATE TABLE LECTURER (code varchar(20) NOT NULL, first_name varchar(255) NOT NULL, last_name varchar(255) NOT NULL, email varchar(255), remarks varchar(255), PRIMARY KEY (code));
CREATE TABLE COURSE (opo_code varchar(20) NOT NULL, ola_code varchar(20) NOT NULL, name varchar(255) NOT NULL, credits integer(10) NOT NULL, remarks varchar(255), LECTURERcode varchar(20) NOT NULL, semester varchar(20) NOT NULL, PRIMARY KEY (opo_code), FOREIGN KEY(LECTURERcode) REFERENCES LECTURER(code));
CREATE TABLE STUDENT (id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, first_name varchar(255) NOT NULL, last_name varchar(255) NOT NULL, nationality varchar(255), email varchar(255), email_vives varchar(255), vives_student_number varchar(255) UNIQUE, remarks varchar(255), home_institution varchar(255) NOT NULL, FOREIGN KEY(home_institution) REFERENCES UNIVERSITY(code));
CREATE TABLE UNIVERSITY (code varchar(255) NOT NULL, name varchar(255) NOT NULL, country varchar(255) NOT NULL, remarks varchar(255), PRIMARY KEY (code));
CREATE TABLE STUDENT_COURSE (STUDENTid integer(10) NOT NULL, COURSEopo_code varchar(20) NOT NULL, final_result integer(10), remarks varchar(255), PRIMARY KEY (STUDENTid, COURSEopo_code), FOREIGN KEY(STUDENTid) REFERENCES STUDENT(id), FOREIGN KEY(COURSEopo_code) REFERENCES COURSE(opo_code));
